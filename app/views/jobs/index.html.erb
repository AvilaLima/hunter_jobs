<h1>Vagas</h1>
<% if current_user.headhunter? %>
  <%= link_to 'Cadastrar Nova Vaga', new_job_path %>
<% end %>
<%= form_with url: search_jobs_path, method: :get do |s| %>
  <%= s.label :q, 'Busca' %>
  <%= s.search_field :q %>
  <%= s.submit 'Buscar' %>
<% end %>
<ul>
    <% @jobs.each do |j|%>
        <li><%= link_to "#{j.title}", j , id: "details-#{j.id}"%></li>
        <ul>
          <li><%= j.summary %></li>
        </ul>
        <% if j.open? %>
        <ul>
          <li><%= link_to "Encerrar #{j.title}", close_job_path(j) %></li>
        </ul>
        <% else %>
            <li>Encerrada</li>
        <% end %>
    <%end%> 
</ul>

<%= link_to 'Voltar', root_path %>
