<h1>Meu perfil</h1>
<% if @profile.errors.any? %>
  <ul>
    <% @profile.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @profile, local: true do |p|%>
  <ul>
    <li>
      <%= p.label :name %>
      <%= p.text_field :name %>
    </li>

    <li>
      <div class="field">
        <%= p.label :avatar, "Foto" %>
        <%= p.file_field :avatar %>
      </div>
    </li>
    
    <li>
      <%= p.label :social_name%>
      <%= p.text_field :social_name %>
    </li>

    <li>
      <%= p.label :birth_date%>
      <%= p.date_field("birth_date", min: Date.today) %>
    </li>

    <li>
      <%= p.label :formation%>
      <%= p.text_field :formation %>
    </li>

    <li>
      <%= p.label :experience%>
      <%= p.text_field :experience %>
    </li>

    <li>
      <%= p.label :summary%>
      <%= p.text_area :summary %>
    </li>

    <li>
      <%= p.label :favorite%>
      <%= p.text_field :favorite %>
     </li>
    <%= p.submit 'Enviar' %>

  </ul>
<%end%>
<%= link_to 'Voltar', root_path %>