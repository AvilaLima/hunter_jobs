<% if @apply_job.errors.any? %>
  <ul>
    <% @apply_job.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: [@job,@apply_job], local: true do |f| %>
  <%= f.label :cover_letter %>
  <%= f.text_field :cover_letter %>
  <%= f.submit 'Enviar' %>
<% end  %>